[ALYX_ENV]
; Development version. Uses values for OS X.

; home directory for ALyX binaries
homedir=/opt/local/alyx

; interactive partition editor
dpart=open -a 'Disk Utility'

; scavenger program
scav=open -a 'Disk Utility'

; should be open (os x) or xdg-open (linux)
editor=open

; image mount command
imgMnt=hdiutil attach

; image burn command
imgWrt=hdiutil burn

; pascal-specific ide (Lazarus or fp should be default)

pascalc=fpc

; c compiler

cc=clang

; disk scan command

fsckIt=diskutil verify /

; default web browser

browser=open /Applications/Safari.app
